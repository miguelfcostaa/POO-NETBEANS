 * @author death
 */
public class Negocio {
    private int baseTri;
    private int rentabilidade;
    
    
    public Negocio() {
        baseTri = 0;
        rentabilidade = 0;

        
    }
    public Negocio(int baseTri, int rentabilidade, String id_negocio){
        this.baseTri = baseTri;
        this.rentabilidade = rentabilidade;
        
    }
    
    public int getBaseTri() {
        return baseTri;
    }

    public void setBaseTri(int baseTri) {
        this.baseTri = baseTri;
    }

    public int getRentabilidade() {
        return rentabilidade;
    }

    public void setRentabilidade(int rentabilidade) {
        if (rentabilidade >= 100) rentabilidade = 100;
        if (rentabilidade <= 0) rentabilidade = 0;
        this.rentabilidade = rentabilidade;
    }
    
    public int calculoRentabilidade(){ //de um sÃ³ soldier
        Pessoas p = new Pessoas();
        p.getPeople();
        rentabilidade = rentabilidade + p.getMusculo() + p.getInteligÃªncia() + p.getEstratega();
        rentabilidade = rentabilidade/3;
        return rentabilidade;
    }
    
    
}
