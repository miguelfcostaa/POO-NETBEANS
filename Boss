    public void NomearCons() {
        
        int n = 1;
        //if (pessoa.comparaPosto("Associate") == true){
            for(int i=0; i<getPeople().size(); i++) {
                System.out.println(n +"Pessoa = " + getNome(i) + "Apelido = " + getApelido(i));
                System.out.println("6- Voltar.");
                System.out.println("Qual pertende escolher: ");
                n++;
            }
        //}
    }
    public void MenuNomearCons() {
        Scanner scanchoice = new Scanner(System.in);
        int option = -1;
        int n = 1;
        while (option < 1 || option > 3) {
            for(int i=0; i<getPeople().size(); i++) {
                System.out.println(n +" - Pessoa: " + getNome(i) + "      Posto: " + getPosto(i));
                n++;
            }
            int m = 1 + n;
            System.out.println( m + "- Voltar.");
            System.out.println("Qual pertende escolher: ");
            if (scanchoice.hasNextInt()) {
                option = scanchoice.nextInt();
            }   
            switch (option) {
                case 1:
                    System.out.println(n + "Pessoa = " + getNome(1) + "Apelido = " + getApelido(1));    
                    break;
                case 2:
                    Familia fam = new Familia();
                    fam.Menu();
                    break;
                default:
                    System.out.println("Opcao invalida");    
            }
        }
    }
}
